@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    @* <link id="Link1" rel="shortcut icon" href="images/favicon.ico" type="image/x-icon" /> *@
    @{
        if (CultureInfo.CurrentCulture.TextInfo.IsRightToLeft)
        {
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet" crossorigin="anonymous">
            <link rel="stylesheet" type="text/css" href="/css/rtl.css">
            <link href="/css/main-ar.css" rel="stylesheet">
        }
        else
        {
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
        }
    }
    <link href="/css/main.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
	<script src="~/lib/jquery/jquery.min.js"></script>
	<script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>
<body class="bg-light has-bg-img">
    <header>
        <div class="top-navigation py-1">
            <div class="container-fluid container-lg p-0">
                <ul class="login text-end">
                    <li><a class="text-decoration-none me-2" href="https://www.addc.ae">@Localizer["ADDCHome"]</a></li>
                    <li>|</li>
                    <li><a class="text-decoration-none me-2" href="https://www.aadc.ae">@Localizer["AADCHome"]</a></li>
                    <li>|</li>
                    <li><a class="text-decoration-none me-2" href="https://tmc.fms-tech.com/TMCDriverRegistration/en/Subscribe">@Localizer["TMCLink"]</a></li>
                </ul>
            </div>
        </div>
        <div class="container-fluid bg-white p-md-0 main-navigation border-bottom" style="--bs-bg-opacity: .65;">
            <nav class="navbar navbar-expand-xl sticky-top container-xl">
                <div class="container-fluid p-0">
                    <a class="nav-link text-dark" aria-current="page" href="https://www.addc.ae"><img src="/images/addc-logo.png" class="logo" width="125"/></a>
                    <a class="nav-link text-dark px-md-5" aria-current="page" href="https://www.aadc.ae"><img src="/images/aadc-logo.png" class="logo" width="117" /></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="offcanvas offcanvas-end" id="navigation">
                        <div class="offcanvas-header justify-content-end">
                            <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
                        </div>
                        <div class="offcanvas-body justify-content-end">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a asp-controller="home" asp-action="index" class="nav-link" aria-current="page">@Localizer["Navigation Link Home"]</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="registration" asp-action="index" class="nav-link" aria-current="page">@Localizer["Navigation Link Register Training"]</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <main class="container-fluid container-md bg-white py-4" style="--bs-bg-opacity: .65;">
        @RenderBody()
    </main>
    <footer class="container-fluid container-md bg-white" style="--bs-bg-opacity: .65;">
        <div id="copyright">
            <p>@Localizer["Copyright"] &copy; <script>document.write(new Date().getFullYear())</script> @Localizer["Footer Rights"]</p>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
     <!-- Bootstrap Datepicker JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.9.0/dist/js/bootstrap-datepicker.min.js"></script>
</body>
</html>
